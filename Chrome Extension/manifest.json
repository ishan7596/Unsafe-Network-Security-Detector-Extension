{
    "manifest_version": 3,
    "name": "Unsafe Network Security Detector",
    "version": "1.0",
    "description": "Detects Unsafe Networks.",
    "permissions": [
      "notifications",
      "activeTab",
      "webNavigation",
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  